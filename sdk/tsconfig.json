{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",                                 
    "module": "commonjs",    
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",  
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,    
    "baseUrl": "src",     
    "skipLibCheck": true                                 
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/test", "logs"],
  "lib": ["es2015"]
}
